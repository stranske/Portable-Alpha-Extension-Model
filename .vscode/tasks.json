{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Setup Environment",
            "type": "shell",
            "command": "./setup.sh",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": ".venv/bin/python",
            "args": [
                "-m",
                "pytest",
                "-v"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Linting (Ruff)",
            "type": "shell",
            "command": ".venv/bin/python",
            "args": [
                "-m",
                "ruff",
                "check",
                "pa_core"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Type Check (Pyright)",
            "type": "shell",
            "command": ".venv/bin/python",
            "args": [
                "-m",
                "pyright"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Run CLI with Sample Config",
            "type": "shell",
            "command": ".venv/bin/python",
            "args": [
                "-m",
                "pa_core.cli",
                "--params",
                "parameters.csv",
                "--index",
                "sp500tr_fred_divyield.csv"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Start Dashboard",
            "type": "shell",
            "command": ".venv/bin/python",
            "args": [
                "-m",
                "streamlit",
                "run",
                "dashboard/app.py"
            ],
            "group": "build",
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Debug Codex PR",
            "type": "shell",
            "command": "python",
            "args": [
                "scripts/debug_codex_pr.py",
                "--branch=${workspaceFolderBasename}"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Run automated debugging for Codex pull requests"
        },
        {
            "label": "Debug Codex PR with Auto-fix",
            "type": "shell",
            "command": "python",
            "args": [
                "scripts/debug_codex_pr.py",
                "--branch=${workspaceFolderBasename}",
                "--commit"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Run automated debugging with auto-commit fixes"
        },
        {
            "label": "Validate PR for CI/CD",
            "type": "shell",
            "command": "make",
            "args": [
                "validate-pr"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Run complete PR validation workflow"
        }
    ]
}